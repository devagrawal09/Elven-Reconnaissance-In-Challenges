<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>ERIC</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link href="/static/css/table.css" rel="stylesheet" />
    <script
      src="https://kit.fontawesome.com/2a5cce350d.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="bg-dark text-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">ERIC</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Search</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">FAQ</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <main class="container">
      <form id="eric-form">
        <div class="row">
          <div class="col">
            <h4 class="mt-4">Search Parameters</h4>
          </div>
          <div class="col" style="text-align: right">
            <button
              type="button"
              class="btn btn-primary mt-4"
              id="eric-full-power-toggle"
            >
              <span class="on-hidden">
                Advanced Search <i class="fas fa-caret-down"></i>
              </span>
              <span class="on-shown hide">
                Simple Search <i class="fas fa-caret-up"></i>
              </span>
            </button>
          </div>
        </div>
        <div class="form-group mt-3">
          <div class="input-group">
            <select name="text-search-type" class="form-select">
              <option selected disabled>Text Search Type</option>
              <option value="title">Title</option>
              <option value="summary">Title and Summary</option>
              <option value="all">Title, Summary, and Description</option>
            </select>
            <input
              type="text"
              class="form-control"
              name="text-search"
              placeholder="Text Search"
              style="flex-grow: 4"
            />
          </div>
        </div>
        <div class="collapse" id="full-power">
          <div class="row mt-3">
            <div class="col-md-6">
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-text">Created After</span>
                  <input type="date" class="form-control" name="date-created-after" />
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-text">Created Before</span>
                  <input type="date" class="form-control" name="date-created-before" />
                </div>
              </div>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-text">Last Updated After</span>
                  <input type="date" class="form-control" name="date-updated-after" />
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-text">Last Updated Before</span>
                  <input type="date" class="form-control" name="date-updated-before" />
                </div>
              </div>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <div class="form-group">
                <label for="range-start">Minimum Prize</label>
                <input
                  type="range"
                  class="form-range"
                  name="min-prize"
                  placeholder="Minimum Prize"
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="range-start">Maximum Prize</label>
                <input
                  type="range"
                  class="form-range"
                  name="max-prize"
                  placeholder="Maximum Prize"
                />
              </div>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <div class="form-group">
                <label for="range-start">Minimum Members</label>
                <input
                  type="range"
                  class="form-range"
                  name="min-members"
                  placeholder="Minimum Members"
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="range-start">Maximum Members</label>
                <input
                  type="range"
                  class="form-range"
                  name="max-members"
                  placeholder="Maximum Members"
                />
              </div>
            </div>
          </div>
          <div class="form-group mt-3">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="no-owner"
                value="no-owner"
              />
              <label class="form-check-label" for="no-owner">
                Challenge Owner has left Habitica
              </label>
            </div>
          </div>
          <h4 class="mt-4">Guild Parameters</h4>
          <div class="form-group mt-3">
            <input
              type="text"
              class="form-control"
              name="text-search-guild"
              placeholder="Guild Search"
              style="flex-grow: 4"
            />
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-text">Classification</span>
                  <select name="guild-class" class="form-select">
                    <option selected disabled>Classification</option>
                    <option value="title">Title</option>
                    <option value="summary">Title and Summary</option>
                    <option value="all">Title, Summary, and Description</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-text">Sub Classification</span>
                  <select name="guild-subclass" class="form-select">
                    <option selected disabled>Sub Classification</option>
                    <option value="title">Title</option>
                    <option value="summary">Title and Summary</option>
                    <option value="all">Title, Summary, and Description</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group mt-3">
            <div class="input-group">
              <select name="lang-type" class="form-select">
                <option selected disabled>Language Preference Type</option>
                <option value="title">Primary</option>
                <option value="all">Primary and Secondary</option>
              </select>
              <select
                name="lang"
                class="form-select"
                style="flex-grow: 4"
              >
                <option selected disabled>Language Preference</option>
                <option value="title">English</option>
                <option value="all">Chinese</option>
              </select>
            </div>
          </div>
        </div>
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-success mt-3">
            Search
          </button>
        </div>
        <div class="result mt-4">
          <table id="eric-results" class="table table-dark"></table>
        </div>
      </form>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/2.1.0/showdown.min.js"></script>
    <script src="https://unpkg.com/dayjs@1.8.21/dayjs.min.js"></script>
    <script src="/static/js/script.js"></script>

    <script>
      const table = $('#eric-results');

      const data = JSON.parse(`<%- data %>`);

      table.DataTable({
        data,
        searching: false,
        columns: [
          { data: 'name', title: 'Name' },
          {
            data: 'summary',
            title: 'Summary',
          },
          {
            data: 'prize',
            title: 'Gem Prize',
            render: data =>
              `${data} <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" style="width: 20px"><g fill="none" fill-rule="evenodd"><path fill="#24CC8F" d="M0 9l5-7h14l5 7-12 13z"></path><path fill="#FFF" opacity=".25" d="M7 8.8L6 4h6zM17 8.8L18 4h-6z"></path><path fill="#FFF" opacity=".5" d="M7 8.8L12 4l5 4.8zM2.6 8.8L6 4l1 4.8z"></path><path fill="#34313A" opacity=".11" d="M21.4 8.8L18 4l-1 4.8zM2.6 8.8H7l5 10.3z"></path><path fill="#FFF" opacity=".5" d="M21.4 8.8H17l-5 10.3z"></path><path fill="#FFF" opacity=".25" d="M7 8.8h10l-5 10.3z"></path></g></svg>`,
          },
          {
            data: 'created',
            title: 'Created',
            render: data => dayjs(data).format('MMM D, YYYY'),
          },
          {
            data: 'updated',
            title: 'Last Updated',
            render: data => dayjs(data).format('MMM D, YYYY'),
          },
          {
            data: 'official',
            title: 'Habitica Official Challenge',
            render: data => (data ? 'Yes' : 'No'),
          },
          {
            data: 'group.name',
            title: 'Group',
            render: data => (data ? data : 'None'),
          },
        ],
      });
    </script>
  </body>
</html>
